{
  "name": "worduel",
  "version": "1.0.0",
  "scripts": {
    "watch:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/css/style.css --watch",
    "build:css": "npx @tailwindcss/cli -i ./src/input.css -o ./public/css/style.css --minify",
    "build": "npm run build:css && tsc",
    "start": "node dist/index.js",
    "dev": "npx dotenv -e ../.env -- tsx watch src/index.ts"
  },
  "dependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "bcrypt": "^6.0.0",
    "cors": "^2.8.5",
    "ejs": "^4.0.1",
    "express": "^4.18.2",
    "jsonwebtoken": "^9.0.3",
    "pg-promise": "^12.3.0",
    "socket.io": "^4.7.4",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cors": "^2.8.17",
    "@types/ejs": "^3.1.5",
    "@types/express": "^4.17.21",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^20.11.16",
    "@types/pg-promise": "^0.0.28",
    "@types/socket.io": "^3.0.1",
    "dotenv-cli": "^11.0.0",
    "ts-node": "^10.9.2",
    "tsx": "^4.21.0",
    "typescript": "^5.3.3"
  }
}
