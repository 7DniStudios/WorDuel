<div class="mx-auto w-full max-w-5xl p-6 flex flex-col gap-8">

  <div class="flex flex-col md:flex-row items-center justify-between gap-4 border-2 border-black bg-white p-6 shadow-[4px_4px_0_0_#000]">
    
    <div class="flex items-center gap-4">      
        <h2 class="text-3xl font-black tracking-tight"><%= locals.username %></h2>
        <a href="/user/<%= locals.user_id %>"><u> #<%= locals.user_id %> </u></a>
    </div>

    <% if(locals.logged_in_user) { %>
        <%- include('partials/interactive_friends_button') %>
    <% } %>
  </div>

  <div class="grid grid-cols-1 md:grid-cols-3 gap-8">

    <div class="md:col-span-1 h-fit border-2 border-black bg-white shadow-[4px_4px_0_0_#000]">
      <div class="border-b-2 border-black bg-gray-100 p-4">
        <h3 class="font-bold text-lg uppercase flex items-center gap-2"> Stats </h3>
      </div>
      
      <dl class="divide-y-2 divide-black">
        <div class="p-4">
          <dt class="text-xs font-bold text-gray-500 uppercase">Joined</dt>
          <dd class="text-lg font-bold text-gray-900 mt-1">
            <%= locals.created_at.toLocaleDateString('en-GB', { year: "numeric", month: "long", day: "numeric" }) %>
          </dd>
        </div>

        <div class="p-4 grid grid-cols-2 gap-4">
          <div>
            <dt class="text-xs font-bold text-gray-500 uppercase"># Games</dt>
            <dd class="text-2xl font-black text-blue-600"><%= locals.games_played %></dd>
          </div>
          <div>
            <dt class="text-xs font-bold text-gray-500 uppercase"># Wins</dt>
            <dd class="text-2xl font-black text-green-600"><%= locals.games_won %></dd>
          </div>
        </div>
        
        <% if (locals.games_played > 0) { %>
        <div class="p-4 bg-yellow-50">
          <dt class="text-xs font-bold text-gray-500 uppercase">Win Rate</dt>
          <dd class="text-lg font-bold">
            <%= Math.round((locals.games_won / locals.games_played) * 100) %>%
          </dd>
        </div>
        <% } %>
      </dl>
    </div>

    <div class="md:col-span-2 border-2 border-black bg-white shadow-[4px_4px_0_0_#000] flex flex-col">
      
      <div class="border-b-2 border-black bg-gray-100 p-4 flex justify-between items-center">
        <h3 class="font-bold text-lg uppercase flex items-center gap-2"> Friends </h3>
      </div>

      <% if(locals.friends.length > 0) { %>
        <ul class="divide-y-2 divide-gray-200">
          <% for(var i=0; i < locals.friends.length; i++) { %>
            <li class="group hover:bg-yellow-50 transition-colors">
              <a href="/user/<%= locals.friends[i].user_id %>" class="flex items-center justify-between p-4">
                
                <div class="flex items-center gap-4">
                  <span class="font-bold text-lg group-hover:underline decoration-2 underline-offset-4">
                    <%= locals.friends[i].username %>
                  </span>
                </div>

                <!-- stolen arrow! -->
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor" class="size-5 text-gray-400 group-hover:text-black">
                  <path stroke-linecap="round" stroke-linejoin="round" d="M13.5 4.5 21 12m0 0-7.5 7.5M21 12H3" />
                </svg>

              </a>
            </li>
          <% } %>
        </ul>
      <% } else { %>
        <div class="p-10 text-center flex flex-col items-center justify-center text-gray-500 gap-2">
          <p>This player has no friends =(</p>
        </div>
      <% } %>

    </div>

  </div>
</div>
