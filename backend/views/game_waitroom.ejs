<div class="flex min-h-[80vh] flex-col items-center justify-center py-10">

  <div class="mb-6 flex items-center justify-between border-b-2 border-black pb-4">
    <h1 class="text-2xl font-black uppercase">
      Game <span class="text-gray-500">#<%= gameId.slice(0,8) %></span>
    </h1>
  </div>

  <div id="game-commands" class="hidden"></div>

  <div
    hx-ext="ws"
    ws-connect="/game/<%= gameId %>"
    class="w-full max-w-5xl flex flex-col items-center gap-10"
    >
    
    <h3 class="text-center text-xl font-bold mb-4">
      Waiting for an opponent to join<span class="loading-dots inline-block w-8 text-left"></span>
    </h3>

    <%- include('partials/game/invite_link') %>

  </div>

</div>

<style>
@keyframes dots {
  0%, 10% { content: ""; }
  20% { content: "."; }
  30% { content: ".."; }
  40% { content: "..."; }
  50% { content: "...."; }
  60% { content: "....."; }
  70% { content: "......"; }
  80% { content: "......."; }
  90%, 100% { content: "........"; }
}

.loading-dots::after {
  content: "";
  animation: dots 1.5s steps(9, end) infinite; 
}
</style>
