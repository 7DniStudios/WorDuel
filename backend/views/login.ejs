<div class="flex flex-col items-center justify-center px-6 py-8 mx-auto h-1/1 w-full">
  <div class="flex flex-col items-center justify-center min-w-fit w-full text-white rounded-lg shadow border sm:max-w-md bg-zinc-800 border-gray-700 min-h-fit h-1/2">
    <form hx-post="/auth/login" hx-swap="innerHTML" hx-target="#login-message" method="post" class="flex flex-col items-center justify-around block px-4 py-2 text-sm min-h-fit h-4/5">
