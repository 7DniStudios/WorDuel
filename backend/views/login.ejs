        <label>Email:</label><br>
        <input type="text" class="bg-gray-100 text-black" name="email" placeholder="name@example.com" required><br><br>
      </div>
      <div class="flex-none">
        <label>Password:</label><br>
        <input type="password" class="bg-gray-100 text-black" name="password" placeholder="Password" required><br><br>
      </div>
      <div id="login-message" class="text-red-500">

      </div>
      <br/>
      <!-- submit button -->
        <div class="flex-none outline rounded-2xl inset-ring-1 inset-ring-white/100 p-2 w-9/10">
          <input type="submit" value="login">
        </div>
    </form>
  </div>
</div>
