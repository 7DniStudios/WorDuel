<div class="w-12 h-12 border-2 border-black flex items-center justify-center text-2xl font-bold font-mono uppercase shadow-[2px_2px_0_0_#000] transition-transform hover:scale-150
    <% if (letter.state === 'CORRECT') { %> bg-green-500 text-white
    <% } else if (letter.state === 'PRESENT') { %> bg-yellow-500 text-white
    <% } else { %> bg-gray-300 text-gray-700 <% } %> <!-- ABSENT and UNKNOWN -->
  ">
    <%= letter.char %>
</div>
