<input 
    id="word-input"
    name="word"
    type="text"

    <% if (locals.swap) { %> hx-swap-oob="true" <% } %>

    minlength="8"
    maxlength="8"

    pattern="^[a-zA-ZąćęłńóśźżĄĆĘŁŃÓŚŹŻ]{8}$"
    placeholder="Enter 8-letter word"

    class="border p-2 flex-grow rounded uppercase"
    oninput="this.value = this.value.toUpperCase()"
    autocomplete="off"
>
